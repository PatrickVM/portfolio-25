{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "vercel-python@3.9",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "PYTHONPATH": "api"
  }
}
