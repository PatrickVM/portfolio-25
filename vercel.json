{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "outputDirectory": "frontend/dist",

  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "env": {
    "PYTHONDONTWRITEBYTECODE": "1"
  }
}
