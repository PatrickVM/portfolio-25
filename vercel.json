{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/*.py": {
      "installCommand": "PYTHONDONTWRITEBYTECODE=1 pip install --no-cache-dir -r api/requirements.txt",
      "maxDuration": 30,
      "memory": 1024,
      "excludeFiles": "**/__pycache__/**"
    }
  },
  "env": {
    "PYTHONPATH": "api"
  }
}
