{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "find api -type d -name '__pycache__' -exec rm -rf {} + && pip install -r api/requirements.txt --no-cache-dir --verbose"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1.py" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
